# RAG System Environment Variables
# Copy this file to .env and fill in your values

# Security - REQUIRED: generate with `openssl rand -hex 32`
JWT_SECRET_KEY=change-me-generate-with-openssl-rand-hex-32
FLASK_SECRET_KEY=change-me-generate-with-openssl-rand-hex-32

# Database
DATABASE_URL=sqlite:///rag/shoe_metadata.db

# GPU Acceleration (set to true if CUDA is available)
CUDA_AVAILABLE=false

# Redis Cache (optional)
REDIS_URL=redis://localhost:6379/0

# Debug Mode (set to false in production)
DEBUG=false

# CORS Origins (comma-separated, use specific origins in production)
CORS_ORIGINS=http://localhost:3000,http://localhost:5000

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Web Interface Configuration
WEB_HOST=127.0.0.1
WEB_PORT=5000
